  </ItemGroup>

  <ItemGroup>
    <Folder Include="Common\" />
    <Folder Include="RenderEngine\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Static\NodeEditorDb.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
